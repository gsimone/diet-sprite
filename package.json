{
  "name": "diet-sprite-monorepo",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "app"
  ],
  "scripts": {
    "ci": "manypkg check && pnpm build",
    "release": "pnpm ci && changeset publish --access public",
    "build": "pnpm -r --filter './packages/*' build && cd app && pnpm build && cd ..",
    "dev": "pnpm --filter diet-sprite dev & pnpm --filter demo dev",
    "demo": "cd app && pnpm dev",
    "test": "jest",
    "prepare": "husky install"
  },
  "dependencies": {
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@changesets/cli": "^2.22.0",
    "@manypkg/cli": "^0.19.1",
    "@types/jest": "^27.4.1",
    "@types/three": "^0.139.0",
    "babel-jest": "^27.5.1",
    "husky": ">=6",
    "jest": "^27.5.1",
    "leva": "^0.9.23",
    "lint-staged": ">=10",
    "prettier": "^2.6.2",
    "tsdown": "^0.2.0",
    "typescript": "^5.5.2"
  },
  "lint-staged": {
    "packages/**/src/*.{ts,tsx,css,md}": "prettier --write"
  }
}
